{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 14,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles?topic=cats": {
    "description": "serves an array of all articles filtered by queried topic",
    "queries": ["topic"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 5,
          "title": "UNCOVERED: catspiracy to bring down democracy",
          "topic": "cats",
          "author": "rogersop",
          "created_at": "2020-08-03T14:14:00.000Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 2
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an array of a single article by its id",
    "exampleResponse": {
      "article": [
        {
          "author": "icellusedkars",
          "title": "Z",
          "article_id": 7,
          "body": "I was hungry.",
          "topic": "mitch",
          "created_at": "2020-01-07T14:08:00.000Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 0
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for an article by its id",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 15,
          "body": "I am 100% sure that we're not completely sure.",
          "article_id": 5,
          "author": "butter_bridge",
          "votes": 1,
          "created_at": "2020-11-24T00:08:00.000Z"
        },
        {
          "comment_id": 14,
          "body": "What do you see? I have no idea where this will lead us. This place I speak of, is known as the Black Lodge.",
          "article_id": 5,
          "author": "icellusedkars",
          "votes": 16,
          "created_at": "2020-06-09T05:00:00.000Z"
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "rogersop",
          "name": "paul",
          "avatar_url": "https://avatars2.githubusercontent.com/u/24394918?s=400&v=4"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "serves an array of a newly created comment for an article",
    "exampleResponse": {
      "comment": [
        {
          "username": "catslover",
          "body": "I really love cats"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves an array of an updated article",
    "exampleResponse": {
      "article": [
        {
          "author": "icellusedkars",
          "title": "Z",
          "article_id": 7,
          "body": "I was hungry.",
          "topic": "mitch",
          "created_at": "2020-01-07T14:08:00.000Z",
          "votes": 10,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment by its id and returns no content",
    "exampleResponse": {}
  }
}
